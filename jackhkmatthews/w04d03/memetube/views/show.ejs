<main class="container">
  <h1>Show</h1>
  <div class="row">
    <div class="col-sm-6 col-md-4">
      <div class="thumbnail">
        <div class="embed-responsive embed-responsive-16by9">
          <iframe class="embed-responsive-item" src="https://www.youtube.com/embed/<%= meme.youtubeId %>" frameborder="0" allowfullscreen></iframe>
        </div>
        <div class="caption">
          <h3><%= meme.name %></h3>
          <p><%= meme.description %></p>
          <p>
            <a href="/memes/<%= meme._id %>/edit" class="btn btn-primary" role="button">Edit</a>
            <form action="/memes/<%= meme._id %>" method="post">
              <input type="hidden" value="delete" name="_method">
              <input type="submit" class="btn btn-danger" value="Delete"></input>
            </form>
          </p>
        </div>
      </div>
    </div>
  </div>
</main>

<main class="container">
  <div class="row">
    <div class="col-sm-12 col-lg-6 col-lg-offset-3">
      <h1>Show</h1>
      <div class="thumbnail">
        <div class="embed-responsive embed-responsive-16by9">
          <iframe class="embed-responsive-item" src="https://www.youtube.com/embed/<%= video.youtubeId %>?modestbranding=1&autohide=1&showinfo=0&controls=0" frameborder="0" allowfullscreen></iframe>
        </div>
        <div class="caption">
          <h3><%= video.title %></h3>
          <h4><%= video.artist %></h4>
          <p><%= video.description %></p>
          <p>
            <a href="/videos/<%= video._id %>/edit" class="btn btn-primary" role="button">Edit</a>
            <form action="/videos/<%= video._id %>" method="post">
              <input type="hidden" value="delete" name="_method">
              <input type="submit" class="btn btn-danger" value="Delete"></input>
            </form>
          </p>
        </div>
      </div>
    </div>
  </div>
</main>

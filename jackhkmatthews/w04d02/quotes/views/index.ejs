<main class="container">
  <h1>Show all quotes</h1>
  <div class="row">
    <% quotes.forEach(quote => { %>
      <div class="col-sm-6 col-md-4">
        <div class="thumbnail">
          <img src="<%= quote.imgSource %>" alt="">
          <div class="caption">
            <h3><%= quote.person %> - <%= quote.artist %></h3>
            <p><%= quote.quote %></p>
            <p>
              <a href="/quotes/<%= quote.id %>/edit" class="btn btn-primary" role="button">Edit</a>
              <form method= "post" action= "/quotes/<%= quote.id %>">
                <input type='hidden' name='_method' value='delete'>
                <button type="submit" class="btn btn-secondary">Delete</button>
              </form>
            </p>
          </div>
        </div>
      </div>
    <% }) %>
    <div class="col-sm-6 col-md-4">
      <div class="thumbnail">
        <div class="caption">
          <p><a href="/quotes/new" class="btn btn-primary" role="button">New</a></p>
        </div>
      </div>
    </div>
  </div>
</main>

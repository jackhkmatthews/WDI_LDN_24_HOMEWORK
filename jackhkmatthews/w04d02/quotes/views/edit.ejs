<main class="container">
  <h1>Show all quotes</h1>
  <div class="row">
    <% for (var i = 0; i < index; i++) { %>
      <div class="col-sm-6 col-md-4">
        <div class="thumbnail">
          <img src="<%= quotes[i].imgSource %>" alt="">
          <div class="caption">
            <h3><%= quotes[i].person %> - <%= quotes[i].artist %></h3>
            <p><%= quotes[i].quote %></p>
            <p>
              <a href="/quotes/<%= quotes[i].id %>/edit" class="btn btn-primary" role="button">Edit</a>
              <form method= "post" action= "/quotes/<%= quotes[i].id%>">
                <input type='hidden' name='_method' value='delete'>
                <button type="submit" class="btn btn-secondary">Delete</button>
              </form>
            </p>
          </div>
        </div>
      </div>
    <% } %>
      <div class="col-sm-6 col-md-4">
        <div class="thumbnail">
          <img src="<%= quotes[index].imgSource %>" alt="">
          <div class="caption">
            <h3><%= quotes[index].person %> - <%= quotes[index].artist %></h3>
            <p><%= quotes[index].quote %></p>
            <p>
              <a href="/quotes/<%= quotes[index].id %>/edit" class="btn btn-primary" role="button">Edit</a>
              <form method= "post" action= "/quotes/<%= quotes[index].id%>">
                <input type='hidden' name='_method' value='delete'>
                <button type="submit" class="btn btn-secondary">Delete</button>
              </form>
            </p>
            <form class="update-form" action="/quotes/<%= quotes[index].id %>" method="post">
              <input type='hidden' name='_method' value='put'>
              <div class="form-group row">
                <label for="example-text-input" class="col-xs-2 col-form-label">Person</label>
                <div class="col-xs-10">
                  <input class="form-control" name="quote[person]" type="text" value="<%= quotes[index].person %>" id="example-text-input">
                </div>
              </div>
              <div class="form-group row">
                <label for="example-search-input" class="col-xs-2 col-form-label">Artist</label>
                <div class="col-xs-10">
                  <input class="form-control" name="quote[artist]" type="search" value="<%= quotes[index].artist %>" id="example-search-input">
                </div>
              </div>
              <div class="form-group row">
                <label for="example-quote-input" class="col-xs-2 col-form-label">Quote</label>
                <div class="col-xs-10">
                  <input class="form-control" name="quote[quote]" type="search" value="<%= quotes[index].quote %>" id="example-quote-input">
                </div>
              </div>
              <div class="form-group row">
                <label for="example-url-input" class="col-xs-2 col-form-label">Img Source</label>
                <div class="col-xs-10">
                  <input class="form-control" name="quote[imgSource]" type="url" value="<%= quotes[index].imgSource %>" id="example-url-input">
                </div>
              </div>
              <div class="form-group row">
                <div class="col-xs-12">
                  <button type="submit" class="btn btn-primary">Update</button>
                </div>
              </div>
            </form>
          </div>
        </div>
      </div>
    <% for (var i = (index+1); i < quotes.length; i++) { %>
      <div class="col-sm-6 col-md-4">
        <div class="thumbnail">
          <img src="<%= quotes[i].imgSource %>" alt="">
          <div class="caption">
            <h3><%= quotes[i].person %> - <%= quotes[i].artist %></h3>
            <p><%= quotes[i].quote %></p>
            <p>
              <a href="/quotes/<%= quotes[i].id %>/edit" class="btn btn-primary" role="button">Edit</a>
              <form method= "post" action= "/quotes/<%= quotes[i].id %>">
                <input type='hidden' name='_method' value='delete'>
                <button type="submit" class="btn btn-secondary">Delete</button>
              </form>
            </p>
          </div>
        </div>
      </div>
    <% } %>
    <div class="col-sm-6 col-md-4">
      <div class="thumbnail">
        <div class="caption">
          <p><a href="/quotes/new" class="btn btn-primary" role="button">New</a></p>
        </div>
      </div>
    </div>
  </div>
</main>

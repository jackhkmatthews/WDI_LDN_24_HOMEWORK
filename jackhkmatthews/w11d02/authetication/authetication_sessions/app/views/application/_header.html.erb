<header>
  <nav>
    <ul>
      <li>
        <%= link_to "Home", root_path %>
      </li>
      <% if current_user %>
        <li>
          Hello, <%= current_user.email %>
        </li>
        <li>
          <%= link_to 'Logout', logout_path, method: :delete, data: {confirm: 'Are you sure?'} %>
        </li>
      <% else %>
        <li>
          <%= link_to "Register", register_path %>
        </li>
        <li>
          <%= link_to "Login", login_path %>
        </li>
      <% end %>
    </ul>
  </nav>
</header>
